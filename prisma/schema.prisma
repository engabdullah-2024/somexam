// prisma/schema.prisma
generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Subject {
  SOMALI
  ISLAMIC
  ARABIC
  ENGLISH
  HISTORY
  GEOGRAPHY
  MATH
  PHYSICS
  BIOLOGY
  CHEMISTRY
  TECHNOLOGY
  BUSINESS
}

enum Status {
  PASSED
  FAILED
}

model Admin {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  @@map("admins")
}

model Student {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  mothersName  String
  rollNumber   String         @unique
  school       String
  placeOfExam  String
  grade        String         // accepts A+, A, A-, â€¦, F
  status       Status
  total        Int
  average      Float
  percentage   Float
  scores       SubjectScore[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // (Removed @@index lines to satisfy Prisma validation on MongoDB)
  @@map("students")
}

model SubjectScore {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  subject   Subject
  score     Int
  studentId String   @db.ObjectId
  student   Student  @relation(fields: [studentId], references: [id])

  @@unique([studentId, subject])
  @@map("subject_scores")
}
